{
  "manifest_version": 3,
  "name": "MikuYTBypass",
  "description": "A lightweight extension to bypass YouTube's ad system using the declarativeNetRequest API.",
  "version": "0.2.1",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.doubleclick.net/*",
    "*://*.googlesyndication.com/*",
    "*://*.googleadservices.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "yt_ad_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js",
        "image/miku.png"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ],
  "action": {
    "default_title": "MikuYTBypass"
  }
}
